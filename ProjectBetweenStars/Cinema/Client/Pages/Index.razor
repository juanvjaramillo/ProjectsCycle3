@page "/"

@* Sección de código HTML *@
<div class="counter">
    <div class="jumbotron">
        @if (Movies == null){
            <label><small class="text-muted">No se encontraron registros</small></label>
        } else {
            foreach (var item_movie in Movies)
            {
                <div class="list-group mb-3">
                    @*Fila que contiene la información de una película*@
                    <div class="row">
                        <div class="col md-3">
                            <img src=@item_movie.UriImage alt="movie image" width="350px" height="480px">
                        </div>
                        <div class="col md-9">
                            <h6 class="text-oi-align-left"><small class="text-muted">Title: </small>@item_movie.Title</h6>
                            <blockquote class="blockquote text-align-left">Synopsis: <small class="text-muted"></small>@item_movie.Synopsis</blockquote>
                        </div>
                    </div>
                </div>      
            }
        }
    </div>
</div>
