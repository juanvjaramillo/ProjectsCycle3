<div class="jumbotron">
    <div class="container-fluid">
        <div class="row mb-3">
            @foreach (var movie in Movies)
            {
                <div class="col-md-4">
                    <div class="card flex-md-row mb-4 box-shadow h-md-300">
                        <div class="card-body d-flex flex-column align-items-start">
                            <div class="card">
                                <img src="@movie.Poster" class="img-thumbnail card-img-fluid" alt="poster movie">
                                <div class="card-body">
                                    <h6 class="card-title">@movie.Name</h6>
                                    <p class="text-muted">
                                        @movie.Synopsis
                                        <br>
                                        <small>@movie.Premier</small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code{
    [Parameter] public List<Movie> Movies{ get; set;}
}